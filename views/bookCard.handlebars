{{! viewing card for a single book }}
{{! this is coming from home routes: show book by id }}

<div class="container d-flex justify-content-center">
  <div class="row mt-4">
    <div class="col-12 my-1">
      <div
        class="card h-100 w-100 custom-card-border"
        id="selected-book"
        data-id="{{selectedBook.id}}"
      >
        <div class="card-header book-link">
          <h4 class="really-embolden">
            <i class="bi bi-book-fill icon-green"></i>
            {{selectedBook.title}}
          </h4>
        </div>
        <ul class="list-group list-group-flush embolden li-large">
          <li class="list-group-item">
            Author:
            <span class="normal-weight">
              {{selectedBook.author}}
            </span>
          </li>
          <li class="list-group-item">
            Publication Date:
            <span class="normal-weight">
              {{selectedBook.publication_year}}
            </span>
          </li>
          <li class="list-group-item">
            Genre:
            <span class="normal-weight">
              {{selectedBook.genre.genre_title}}
            </span>
          </li>
          <li class="list-group-item">
            Date shared to Book Nest:
            <span class="normal-weight">
              {{format_date selectedBook.date_shared}}
            </span>
          </li>
          <li class="list-group-item">
            Shared by:
            <span class="normal-weight">
              {{selectedBook.user.username}}
            </span>
          </li>
        </ul>
        <div class="mx-3">
          <button
            id="add-to-reading-list"
            class="btn btn-custom btn-outline-primary btn-block mt-3 mb-1 w-100"
          >Add to Reading List</button>

          <button
            id="remove-from-reading-list"
            class="btn btn-custom btn-outline-primary btn-block mt-3 mb-3 w-100"
          >Remove from Reading List</button>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/readingList.js"></script>