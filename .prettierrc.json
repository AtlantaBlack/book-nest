{
  "printWidth": 80,
  "tabWidth": 2,
  "trailingComma": "none",
  "semi": true,
  "bracketSpacing": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": [
        "**/*.css",
        "**/*.scss",
        "**/*.html",
        "**/*.handlebars",
        "**/*.hbs"
      ],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
